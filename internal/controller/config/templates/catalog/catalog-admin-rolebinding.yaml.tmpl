apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  annotations:
    openshift.io/display-name: Model Catalog Admin Binding
    openshift.io/description: Binds admin groups to model catalog admin role
  labels:
    app: {{.Name}}
    app.kubernetes.io/created-by: model-registry-operator
    app.kubernetes.io/managed-by: model-registry-operator
    app.kubernetes.io/name: {{.Name}}-admin-binding
    app.kubernetes.io/part-of: model-catalog
    app.kubernetes.io/component: model-catalog-admin
  name: {{.Name}}-admin-binding
  namespace: {{.Namespace}}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: {{.Name}}-admin
subjects:
{{- range .AdminGroups}}
- apiGroup: rbac.authorization.k8s.io
  kind: Group
  name: {{.}}
{{- end}}
