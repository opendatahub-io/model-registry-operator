apiVersion: v1
kind: Service
metadata:
  name: {{.Name}}
  namespace: {{.Namespace}}
  labels:
    app: {{.Name}}
    component: model-catalog
    app.kubernetes.io/name: {{.Name}}
    app.kubernetes.io/instance: {{.Name}}
    app.kubernetes.io/component: model-catalog
    app.kubernetes.io/created-by: model-registry-operator
    app.kubernetes.io/part-of: model-registry
    app.kubernetes.io/managed-by: model-registry-operator
  annotations:
    {{- if .Spec.OAuthProxy}}
    service.beta.openshift.io/serving-cert-secret-name: {{.Name}}-oauth-proxy
    routing.opendatahub.io/external-address-rest: {{.Name}}.{{.Spec.OAuthProxy.Domain}}:{{.Spec.OAuthProxy.RoutePort}}
    {{- end}}
spec:
  ports:
    {{- if .Spec.OAuthProxy}}
    - name: https-api
      port: {{.Spec.OAuthProxy.Port}}
      protocol: TCP
      appProtocol: https
    {{- else }}
    - name: http-api
      port: {{.Spec.Rest.Port}}
      protocol: TCP
      appProtocol: http
    {{ end }}
  selector:
    app: {{.Name}}
    component: model-catalog
